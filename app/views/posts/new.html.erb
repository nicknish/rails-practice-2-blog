<main class="content p-lg">
  <h1 class="title is-2">New Post</h1>

  <%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :name, class: 'label' %>
      <div class="control">
        <%= f.text_field :name, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :body, class: 'label' %>
      <div class="control">
        <%= f.text_area :body, class: 'input' %>
      </div>
    </div>

    <%= f.submit 'Create Post', class: 'button is-primary' %>
  <% end %>
</main>
